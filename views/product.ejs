<%- include("partials/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Our Products</title>
  <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Lora', serif;
      margin: 0;
      background: linear-gradient(to right, #f8f1ff, #ffeedd);
      color: #222;
    }

    h1.pro {
      text-align: center;
      font-size: 3rem;
      padding: 20px 10px;
      background-color: #2a9d8f;
      color: white;
      border-bottom: 5px solid #264653;
    }

    .category-carousel {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
      gap: 20px;
      flex-wrap: wrap;
    }

    .carousel-btn {
      background-color: #f4a261;
      border: none;
      border-radius: 50%;
      color: white;
      font-size: 30px;
      width: 50px;
      height: 50px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .carousel-btn:hover {
      background-color: #e76f51;
    }

    .category-box {
      max-width: 600px;
      padding: 30px;
      background: white;
      border: 4px dashed #264653;
      border-radius: 16px;
      text-align: center;
      transition: 0.4s;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      background-image: linear-gradient(120deg, #fefefe 70%, #e5f4f1);
    }

    .category-box h2 {
      font-size: 28px;
      color: #e63946;
    }

    .category-box p {
      font-size: 18px;
      line-height: 1.7;
      color: #222;
    }

    .category-img {
      width: 100%;
      max-width: 300px;
      height: auto;
      margin-bottom: 20px;
      border-radius: 12px;
      border: 4px solid #f4a261;
      box-shadow: 0 6px 18px rgba(0,0,0,0.25);
    }

    @media (max-width: 768px) {
      h1.pro {
        font-size: 2.2rem;
      }

      .category-carousel {
        flex-direction: column;
        padding: 20px;
      }

      .carousel-btn {
        font-size: 24px;
        width: 40px;
        height: 40px;
      }
    }
  </style>
</head>
<body>

  <h1 class="pro">Our Products</h1>

  <div class="category-carousel">
    <button class="carousel-btn" onclick="changeCategory(-1)" aria-label="Previous">&#8249;</button>

    <div class="category-box" id="categoryBox">
      <img id="categoryImage" class="category-img" src="" alt="Category Image" />
      <h2 id="categoryTitle">Kerala Products</h2>
      <p id="categoryDesc">Matta rice, coconut oil, puttu podi, fish masala, jaggery, appam batter...</p>
    </div>

    <button class="carousel-btn" onclick="changeCategory(1)" aria-label="Next">&#8250;</button>
  </div>

<script>
  const categories = [
    {
      title: 'Kerala Products',
      desc: 'Double Horse Matta Rice, KPL Coconut Oil, Eastern Fish Masala, Nirapara Puttu Podi.',
      img: '/images/kerala.jpg'
    },
    {
      title: 'Punjabi Products',
      desc: 'MDH Chana Masala, Kohinoor Basmati Rice, Amul Paneer, Haldiram’s Rajma.',
      img: '/images/kitchen.jpg'
    },
    {
      title: 'Gujarati Products',
      desc: 'Dhokla Mix, Frozen Thepla, Farsan, Gathiya, Chheda’s Khakhra.',
      img: '/images/gujarat.jpeg'
    },
    {
      title: 'Nepali Products',
      desc: 'Wai Wai Noodles, Gundruk, Momo Masala, Timur, Dalle Khursani.',
      img: '/images/nepal.jpeg'
    },
    {
      title: 'Vegetables',
      desc: 'Frozen okra, drumsticks, curry leaves, tindora, and suran from Deep & Vadilal.',
      img: '/images/vegetables.jpg'
    },
    {
      title: 'Snacks',
      desc: 'Aloo Bhujia, Banana Chips, Bhujia, Papad, Chakli from top brands.',
      img: '/images/snacks.jpeg'
    },
    {
      title: 'Kitchen Items',
      desc: 'Cookers, Steamers, Tawas, Mixers & Spice Boxes from trusted brands.',
      img: '/images/kitchen.jpg'
    }
  ];

  let currentIndex = 0;

  function changeCategory(direction) {
    currentIndex = (currentIndex + direction + categories.length) % categories.length;
    const cat = categories[currentIndex];
    document.getElementById("categoryTitle").innerText = cat.title;
    document.getElementById("categoryDesc").innerText = cat.desc;
    document.getElementById("categoryImage").src = cat.img;
    document.getElementById("categoryImage").alt = cat.title + ' Image';
  }

  window.onload = () => changeCategory(0);
</script>
<%- include("partials/footer") %>

</body>

</html>
